{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "webextensions": true,
    "node": true,
    "es2020": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-inner-declarations": "warn"
  }
}
