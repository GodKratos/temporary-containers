{
  "name": "tmpcontainers",
  "version": "0.0.0",
  "description": "Temporary Containers Plus",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf web-ext-artifacts .web-ext-artifacts dist",
    "build": "run-s clean build:webpack",
    "build:webpack": "webpack",
    "beta": "run-s build beta:*",
    "beta:manifest-update-url": "ts-node manifest-update-url.ts",
    "beta:sign": "web-ext sign --channel unlisted -s dist",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint *.js \"src/**/*.{ts,js}\"",
    "lint:tsc": "tsc -p tsconfig.lint.json",
    "lint:localization": "node scripts/validate-localization.js",
    "webext:build": "web-ext build -s dist",
    "webext:lint": "web-ext lint -s dist",
    "format": "prettier --write \"./**/*.{html,css,json,yml,md,ts,js}\"",
    "test": "nyc --reporter=html --reporter=text ts-mocha --paths -p tsconfig.json test/*.test.ts",
    "test:functional": "ts-mocha ./test/functional/*.test.ts --timeout 10000",
    "dev": "webpack-dev-server --mode development",
    "dev:test": "npm run build && npx web-ext run -s dist",
    "watch:test": "ts-mocha --paths -p tsconfig.json test/*.test.ts --watch",
    "watch:test:verbose": "ts-mocha --paths -p tsconfig.json test/*.test.ts --tmp-debug --watch",
    "check:dependencies": "ncu",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GodKratos/temporary-containers.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GodKratos/temporary-containers/issues"
  },
  "homepage": "https://github.com/GodKratos/temporary-containers#readme",
  "dependencies": {
    "delay": "^6.0.0",
    "p-queue": "^8.1.1",
    "psl": "^1.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.2",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.19.15",
    "@types/psl": "^1.1.3",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "chai": "^6.0.1",
    "chai-deep-match": "^1.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "coveralls": "^3.1.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "mocha": "^11.7.2",
    "npm-check-updates": "^18.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.9.2",
    "web-ext": "^8.9.0",
    "webextensions-geckodriver": "^0.7.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "browserslist": [
    "Firefox >= 67"
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,json,yml,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "test/**/*.ts"
    ]
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "mocha": {
    "bail": true,
    "reporter": "progress",
    "extension": "ts"
  }
}
