{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "./dist",
    "module": "commonjs",
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node", "mocha", "sinon", "chai"]
  }
}
